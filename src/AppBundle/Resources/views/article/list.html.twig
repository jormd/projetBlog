{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-3">
            {% for article in articles %}
                <div data-id="{{ article.id }}">
                    <input type="checkbox"
                            {% if article.publier %}
                                checked
                            {% endif %}
                    >
                    <a href="{{ path('editArticle', {'article' : article.id}) }}">{{ article.title }}</a>
                </div>
            {% endfor %}
        </div>
        <div class="col-sm-9">
            {% for commentaire in commentaires %}
                {% include 'AppBundle:article:lineCommentaireEditDelete.html.twig' with {'commentaire' : commentaire} %}
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        //ajout d'un listener sur l'Ã©dition d'un article
        $(function () {
            var inputs = $('input');

            for (var i = 0; i < inputs.length; i++) {
                inputs[i].addEventListener('click', function (e) {
                    var id = $(this).closest('div').attr('data-id');

                    var route = '{{ path('publishArticle', {'article':"PLACEHOLDER"}) }}';

                    route = route.replace("PLACEHOLDER", id);
                    $.post(route)
                })
            }
        });

        $('.delete').on('click', function (e) {
           e.stopImmediatePropagation();
           $.post($(this).attr('data-href'), function (data) {
               console.log('hi');
               console.log(data.id);
               console.log($(document).find('#commentaire'.concat(data.id)));
               $(document).find('#commentaire'.concat(data.id)).remove();
           });
        })

    </script>
{% endblock %}