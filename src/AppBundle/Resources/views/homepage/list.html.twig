{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="Article">
            <div class="col-sm-10">
                {% if article is not null %}
                    <div class="header">
                        <h1>{{ article.title }}</h1>
                    </div>
                    <div class="body">
                        {{ article.body|raw }}
                    </div>
                    <div class="datePublic">
                        <p>{{ article.datePublication|date('Y-m-d h:m:s', "Europe/Paris") }}</p>
                    </div>
                    <div class="comment">
                        <h2>Commentaire</h2>
                        {% for commentaire in article.commentaires %}
                            {% include '@App/homepage/lineCommentaire.html.twig' with {'commentaire' : commentaire} %}
                        {% endfor %}
                    </div>
                    <div class="addComment">
                        <form method="post" action="{{ path('addCommentaire', {'article' : article.id}) }}" name="Commentaire">
                            <input type="text" name="Commentaire[texte]" class="tinymce">
                            <button id="submit" type="button" onclick="saveComment()" class="btn btn-success btn-lg">valider</button>
                        </form>
                    </div>
                {% endif %}
            </div>
            <div class="col-sm-2 listeArticle">
                {% for oneArticle in articles %}
                    <div class="cartouche">
                        <a href="{{ path('showOneArticle', {'article' : oneArticle.id}) }}" class="lien">
                            <span>{{ oneArticle.title }}</span>
                        </a>
                        <br>
                        <span class="dateArticle">{{ oneArticle.datePublication|date('Y-m-d', "Europe/Paris") }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock %}
{% block javascript %}
    {{ parent() }}

    <script>
        tinymce.init({
            selector: '.tinymce',
            init_instance_callback: function (editor) {
                editor.on('change', function (e) {
                    tinyMCE.triggerSave();
                });
            }
        });

        function saveComment(e)
        {
            var form = $('form');

            $.post(form.attr('action'), form.serialize()).done(function (data) {
                tinyMCE.activeEditor.setContent('');
                $('div.comment').append(data['html'])
            });
        }
    </script>
{% endblock %}