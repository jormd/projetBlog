<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Blog</title>
        {% block stylesheet %}
            <link rel="stylesheet" href="{{ asset('bundles/app/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/article.min.css') }}">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
                  rel="stylesheet">
        {% endblock %}

    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    Blog
                </a>
            </div>
            <div class="navbar-right">
                {% if is_granted('ROLE_USER') %}
                    <a class="navbar-brand" href="{{ path('listArticle') }}">
                        list Article
                    </a>
                    <a class="navbar-brand" href="{{ path('addArticle') }}">
                        ajout Article
                    </a>
                    <a class="navbar-brand" href="{{ path('fos_user_security_logout') }}">
                        deconnection
                    </a>
                {% else %}
                    <a class="navbar-brand" href="{{ path('fos_user_registration_register') }}">
                        inscription
                    </a>
                    <a class="navbar-brand" href="{{ path('fos_user_security_login') }}">
                        connection
                    </a>
                {% endif %}
            </div>
        </div>
    </nav>
    <div class="container">
        {% block body %}

        {% endblock %}
    </div>

        {% block javascript %}
            <script src="{{ asset('bundles/app/bower_components/tinymce/tinymce.min.js') }}"></script>
            <script src="{{ asset('bundles/app/bower_components/jquery/dist/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/app/bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>